            <RangeInput TValue="int" @bind-Value="amount4" Min="1" Max="5" Step="1" TickMarks="list"/>
        </div>
    </div>
</div><br>

<div class="row">
    <div class="col-12 col-md-12 text-center">Question 5</div>
    <div class="d-flex flex-row mb-3">
        <div class="flex-fill">
            <RangeInput TValue="int" @bind-Value="amount5" Min="1" Max="5" Step="1" TickMarks="list"/>
        </div>
    </div>
</div><br>
<div class="d-grid gap-2">
    <Button class="btn btn-primary" Size="ButtonSize.ExtraLarge" @onclick="HideModal">Send</Button>
</div>

@code {
    
    [Parameter] public EventCallback<MouseEventArgs> HideModal { get; set; }
    int amount1 = 1;
    int amount2 = 1;
    int amount3 = 1;
    int amount4 = 1;
    int amount5 = 1;
    
    
    IEnumerable<TickMark> list = new List<TickMark>
    {
        new(){ Label = "1", Value = "1"},
        new(){ Label = "2", Value = "2"},
        new(){ Label = "3", Value = "3"},
        new(){ Label = "4", Value = "4"},
        new(){ Label = "5", Value = "5"},
    };
}

