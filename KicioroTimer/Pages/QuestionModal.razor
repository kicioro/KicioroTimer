            <RangeInput TValue="int" @bind-Value="amount2" Min="1" Max="5" Step="1" TickMarks="list"/>
        </div>
    </div>
</div><br>
<div class="row">
    <div class="col-12 col-md-12 text-center">Question 3</div>
    <div class="d-flex flex-row mb-3">
