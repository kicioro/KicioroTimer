<div class="row">
    <div class="col-6 col-md-6 text-end">Dedlajn :</div>
    <div class="col-6 col-md-6">@subject.ExamDate.ToString("MM/dd")</div>
</div>
<div class="row">
    <div class="col-6 col-md-6 text-end">Żeby się naumiejać :</div>
    <div class="col-6 col-md-6">@subject.TimeForSubject.TotalHours</div>
</div>
<div class="row">
    <div class="col-6 col-md-6 text-end">Naumiejane :</div>
    <div class="col-6 col-md-6">@subject.TimeUsed.TotalHours</div>
</div>
<div class="row">
    <div class="col-6 col-md-6 text-end">Do naumiejania  :</div>
    <div class="col-6 col-md-6">@subject.TimeForSubject.Subtract(subject.TimeUsed).TotalHours</div>
</div>

@code {
    [Parameter] public Weather.Subject subject { get; set; }
}